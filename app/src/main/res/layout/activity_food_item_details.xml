<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="#A2CD5A"
                tools:context="nairuz.com.calcounter.FoodItemDetailsActivity">



    <ImageView
        android:id="@+id/logo_Id"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/colorful_foods"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_Id"
        android:background="@drawable/row_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/details_FoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"
            android:textSize="19sp"
            android:layout_marginTop="22dp"
            android:textColor="#000"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/details_CaloriesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/details_Caloriesvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            android:textColor="#ffff2026"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/detials_dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumed on..."
            android:textColor="#000"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/details_shareButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/share_item"
            android:layout_gravity="right"
            android:background="@drawable/circle"
            android:textColor="#000"
            android:layout_marginTop="45dp"
            />

    </LinearLayout>
</RelativeLayout>
