<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/row_bg"
                android:orientation="vertical"
                android:padding="12dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"  />

    <TextView
        android:id="@+id/dateText_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date Id"
        android:layout_below="@+id/name"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textColor="#424242"  />

    <ImageView
        android:id="@+id/thumbnail_Id"
        android:layout_width="190dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/colorful_foods"
        android:layout_below="@id/dateText_id"/>

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#ffff2026"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/thumbnail_Id" />

    <TextView
        android:id="@+id/CalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cal_text"
        android:layout_alignBaseline="@+id/calories"
        android:layout_toRightOf="@+id/calories"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/nextPage_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:textSize="35sp"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4sp"/>



</RelativeLayout>